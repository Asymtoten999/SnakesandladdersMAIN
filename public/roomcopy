socket.on("turnData", (turnData) => {
  console.log(turnData);
  socket.on("moveData", (moveData) => {
    socket.on("directionData", (direction) => {
      if (turnData == "Blue") {
        document.getElementById("activeToken").innerHTML = "Red's turn";
        turnData = "Red";
      } else if (turn == "Red") {
        document.getElementById("activeToken").innerHTML = "Blue's turn";
        turnData = "Blue";
      }

      return new Promise(async (resolve, reject) => {
        if (direction == "up") {
          document.getElementById(`${turnData}`).style.marginTop = moveData;
        } else if (direction == "right") {
          document.getElementById(`${turnData}`).style.marginLeft = moveData;
        } else if (direction == "left") {
          document.getElementById(`${turnData}`).style.marginLeft = moveData;
        }
        await new Promise((resolve) => setTimeout(resolve, 400));
        resolve();
      });
    });
  });
});